{% extends "::base.html.twig" %}
{% block body %}

  {% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

	  <div class="wrapper">
    <form class="form-signin" action="{{ path('account_page') }}" method="post">       
      <h2 class="form-signin-heading">Авторизация</h2>
      <input type="text" class="form-control" name="username" value="{{ last_username }}" placeholder="Логин" required="" autofocus="" />
      <p></p>
      <input type="password" class="form-control" name="password" placeholder="Пароль" required=""/>      
      <label class="checkbox">
        <input type="checkbox" value="remember-me" id="rememberMe" name="rememberMe"> Запомнить
      </label>
      <button class="btn btn-lg btn-primary btn-block" type="submit">Войти</button>   
    </form>
  </div>
{% endblock %}